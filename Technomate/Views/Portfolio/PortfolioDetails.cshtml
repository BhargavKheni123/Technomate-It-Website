@model Technomate.Models.PortfolioDetailsViewModel

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="container">
        <nav class="breadcrumbs">
            <ol>
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><a href="@Url.Action("Portfolio", "Portfolio")">Portfolio</a></li>
                <li class="current">@Model.Portfolio.Title</li>
            </ol>
        </nav>
        <h1>@Model.Portfolio.Title</h1>
    </div>
</div>

<!-- Full-width Portfolio Details -->
<section id="portfolio-details" class="portfolio-details section">
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="row gy-4 justify-content-center">

            <div class="col-lg-10">
                <div class="portfolio-details-card card shadow-sm p-4 mb-5">
                    <div class="portfolio-details-img mb-4">
                        <img src="@Model.Portfolio.ImageUrl" class="img-fluid rounded" alt="@Model.Portfolio.Title">
                    </div>
                    <div class="portfolio-details-content">
                        <h2 class="mb-3">@Model.Portfolio.Title</h2>
                        <p><strong>Category:</strong> @Model.Portfolio.Category</p>
                        <p>@Model.Portfolio.ShortDescription</p>
                    </div>

                    <!-- Back to Portfolio Button -->
                    <div class="mt-4">
                        <a href="@Url.Action("Portfolio", "Portfolio")"
                           class="btn btn-primary btn-sm"
                           style="background-color: #2f5f7a; border-color: #2f5f7a;">
                            ← Back to Portfolio
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Scroll Top -->
<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>
