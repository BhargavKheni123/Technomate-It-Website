@model Technomate.Models.BlogViewModel
@{
    Layout = "_Layout2";
}

<body class="blog-page">
    <main class="main">

        <div class="page-title dark-background" style="background-image: url(assets/img/page-title-bg.jpg);">
            <div class="container position-relative">
                <h1>Blog</h1>
                <nav class="breadcrumbs">
                    <ol>
                        <li><a href="/">Home</a></li>
                        <li class="current">Blog</li>
                    </ol>
                </nav>
            </div>
        </div>

        <section id="blog-posts" class="blog-posts section">
            <div class="container">
                <div class="row gy-4">

                    @foreach (var blog in Model.Blogs)
                    {
                        <div class="col-lg-4">
                            <article class="position-relative h-100">

                                <div class="post-img">
                                    <img src="~/@blog.ImageUrl" alt="@blog.Title"
                                         class="img-fluid rounded-top"
                                         style="width:100%; max-height:250px; object-fit:cover;">
                                </div>

                                <div class="post-content d-flex flex-column">
                                    <h3 class="post-title">@blog.Title</h3>

                                    <div class="meta d-flex align-items-center">
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-person"></i> <span class="ps-2">@blog.Author</span>
                                        </div>
                                        <span class="px-3 text-black-50">/</span>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-folder2"></i> <span class="ps-2">@blog.Category</span>
                                        </div>
                                    </div>

                                    <p>@blog.Summary</p>

                                    <hr>
                                    <a href="@Url.Action("BlogDetails2", "Blog", new { slug = blog.Slug })" class="readmore stretched-link">
                                        <span>Read More</span><i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>

                            </article>
                        </div>
                    }

                </div>
            </div>
        </section>

        <!-- Pagination -->
        <section id="blog-pagination" class="blog-pagination section">
            <div class="container">
                <div class="d-flex justify-content-center">
                    <ul>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li>
                                <a href="@Url.Action("Blog2", new { page = i })" class="@(i == Model.CurrentPage ? "active" : "")">@i</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </section>

    </main>
</body>
