@model BlogViewModel
@{
    ViewData["Title"] = "Blog - Technomate";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"]</title>
    <meta name="description" content="Latest insights, news, and updates from Technomate">
    <meta name="keywords" content="Technomate, blog, technology, updates, news">

    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <link href="assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="assets/css/main.css" rel="stylesheet">
</head>

<body class="blog-page">

    <main class="main">

        <!-- Page Title -->
        <div class="page-title" data-aos="fade">
            <div class="container">
                <nav class="breadcrumbs">
                    <ol>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="current">Blog</li>
                    </ol>
                </nav>
                <h1>Blog</h1>
            </div>
        </div><!-- End Page Title -->

        <div class="container">
            <div class="row">

                <!-- Main Blog Posts (Full-width, 50-50 layout) -->
                <div class="col-12">
                    <section id="blog-posts" class="blog-posts section">
                        <div class="container">
                            <div class="row gy-4">
                                @foreach (var blog in Model.Blogs)
                                {
                                    <div class="col-lg-6 col-md-6 col-sm-12">
                                        <article class="card h-100 shadow-sm">
                                            <div class="post-img">
                                                <img src="~/@blog.ImageUrl" alt="@blog.Title"
                                                     class="img-fluid rounded-top"
                                                     style="width:100%; max-height:250px; object-fit:cover;">
                                            </div>
                                            <div class="card-body d-flex flex-column">
                                                <h4 class="title mb-2">
                                                    <a href="@Url.Action("Details", "Blog", new { slug = blog.Slug })">@blog.Title</a>
                                                </h4>
                                                <div class="meta-top mb-2">
                                                    <ul class="list-inline mb-2">
                                                        <li class="list-inline-item"><i class="bi bi-person"></i> @blog.Author</li>
                                                        <li class="list-inline-item"><i class="bi bi-calendar"></i> @blog.PublishedDate.ToString("MMM dd, yyyy")</li>
                                                        <li class="list-inline-item"><i class="bi bi-chat-dots"></i> @blog.CommentsCount Comments</li>
                                                    </ul>
                                                </div>
                                                <p class="flex-grow-1">@Html.Raw(blog.Summary)</p>
                                                <div class="read-more mt-auto">
                                                    <div class="read-more mt-auto">
                                                        <a href="@Url.Action("BlogDetails", "Blog", new { slug = blog.Slug })"
                                                           class="btn btn-primary btn-sm"
                                                           style="background-color: #2f5f7a !important; border-color: #2f5f7a !important;">
                                                            Read More
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                    </section>

                    <!-- Blog Pagination -->
                    <section id="blog-pagination" class="blog-pagination section mt-4">
                        <div class="container">
                            <div class="d-flex justify-content-center">
                                <ul class="pagination">

                                    <!-- Previous -->
                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Blog", new { page = Model.CurrentPage - 1 })">
                                            <i class="bi bi-chevron-left"></i>
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                            <a class="page-link"
                                               href="@Url.Action("Blog", new { page = i })"
                                               style="@(i == Model.CurrentPage ? "background-color: #2f5f7a !important; border-color: #2f5f7a !important; color: #fff;" : "")">
                                                @i
                                            </a>
                                        </li>
                                    }
                                    <!-- Next -->
                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                        <a class="page-link" href="@Url.Action("Blog", new { page = Model.CurrentPage + 1 })">
                                            <i class="bi bi-chevron-right"></i>
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>
                    </section>
                </div>


                @* <!-- Sidebar -->
                <div class="col-lg-4 sidebar">
                    <div class="widgets-container">

                        <!-- Search Widget -->
                        <div class="search-widget widget-item">
                            <h3 class="widget-title">Search</h3>
                            <form asp-controller="Blog" asp-action="Index" method="get">
                                <input type="text" name="search" placeholder="Search blog posts...">
                                <button type="submit"><i class="bi bi-search"></i></button>
                            </form>
                        </div>

                        <!-- Categories Widget -->
                        <div class="categories-widget widget-item">
                            <h3 class="widget-title">Categories</h3>
                            <ul class="mt-3">
                                @foreach (var cat in Model.Categories)
                                {
                                    <li><a href="#">@cat</a></li>
                                }
                            </ul>
                        </div>

                        <!-- Recent Posts Widget -->
                        <div class="recent-posts-widget widget-item">
                            <h3 class="widget-title">Recent Posts</h3>
                            @foreach (var post in Model.RecentPosts)
                            {
                                <div class="post-item">
                                    <img src="~/@post.ImageUrl" alt="@post.Title" style="width: 80px; height: 80px; object-fit: cover; border-radius: 5px; margin-right: 10px;">
                                    <div>
                                        <h4><a href="@Url.Action("Details", "Blog", new { slug = post.Slug })">@post.Title</a></h4>
                                        <time datetime="@post.PublishedDate.ToString("yyyy-MM-dd")">
                                            @post.PublishedDate.ToString("MMM dd, yyyy")
                                        </time>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Tags Widget (Static for now, can make dynamic later) -->
                        <div class="tags-widget widget-item">
                            <h3 class="widget-title">Tags</h3>
                            <ul>
                                <li><a href="#">App</a></li>
                                <li><a href="#">IT</a></li>
                                <li><a href="#">Business</a></li>
                                <li><a href="#">Mac</a></li>
                                <li><a href="#">Design</a></li>
                                <li><a href="#">Office</a></li>
                                <li><a href="#">Creative</a></li>
                                <li><a href="#">Studio</a></li>
                                <li><a href="#">Smart</a></li>
                                <li><a href="#">Tips</a></li>
                                <li><a href="#">Marketing</a></li>
                            </ul>
                        </div>

                    </div>
                </div>

            </div> *@
        </div>

    </main>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>
    <script src="assets/vendor/aos/aos.js"></script>
    <script src="assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>

    <!-- Main JS File -->
    <script src="assets/js/main.js"></script>

</body>
</html>
