@model Technomate.Models.BlogCreateViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create New Blog";
}

<style>
    body {
        background-color: #f4f6f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #2f5f7a;
        color: #fff;
        font-weight: 600;
        font-size: 1.3rem;
    }

    .form-label {
        font-weight: 500;
        color: #2f5f7a;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 15px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2f5f7a;
            box-shadow: 0 0 5px rgba(47, 95, 122, 0.5);
            outline: none;
        }

    button.btn-primary {
        background-color: #2f5f7a;
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        button.btn-primary:hover {
            background-color: #1e3d55;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

    .container {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    .mb-3 {
        margin-bottom: 25px;
    }

    .tox-tinymce {
        border-radius: 10px !important;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4 class="mb-0">Create New Blog</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">

                        @if (Model.IsSuperAdmin)
                        {
                            <div class="mb-3">
                                <label class="form-label">Select Company</label>
                                <select asp-for="SelectedCompanyId" class="form-control" required>
                                    <option value="">-- Select Company --</option>
                                    @foreach (var company in Model.Companies)
                                    {
                                        <option value="@company.CompanyId">@company.CompanyName</option>
                                    }
                                </select>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Blog.Title" class="form-label"></label>
                            <input asp-for="Blog.Title" class="form-control" />
                            <span asp-validation-for="Blog.Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.Slug" class="form-label"></label>
                            <input asp-for="Blog.Slug" class="form-control" />
                            <span asp-validation-for="Blog.Slug" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.Content" class="form-label"></label>
                            <textarea asp-for="Blog.Content" class="form-control" id="Content"></textarea>
                            <span asp-validation-for="Blog.Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.Author" class="form-label"></label>
                            <input asp-for="Blog.Author" class="form-control" />
                            <span asp-validation-for="Blog.Author" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Upload Image</label>
                            <input type="file" name="ImageFile" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="Blog.ImageUrl" class="form-control" />
                            <span asp-validation-for="Blog.ImageUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.Category" class="form-label"></label>
                            <input asp-for="Blog.Category" class="form-control" />
                            <span asp-validation-for="Blog.Category" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Blog.Tags" class="form-label"></label>
                            <input asp-for="Blog.Tags" class="form-control" placeholder="Comma separated tags" />
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            Save Blog
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://cdn.ckeditor.com/4.21.0/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('Content');
    </script>
}
