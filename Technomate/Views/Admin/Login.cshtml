@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Login - TechnoMate</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
/*             background: linear-gradient(135deg, #2F5F7A, #4a7c94);
 */            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .login-card {
            background-color: #ffffff;
            padding: 40px 30px;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.3);
            width: 400px;
        }

            .login-card h2 {
                text-align: center;
                color: #2F5F7A;
                margin-bottom: 30px;
                font-weight: 700;
            }

        .form-control:focus {
            border-color: #2F5F7A;
            box-shadow: none;
        }

        .btn-login {
            background-color: #2F5F7A;
            color: #fff;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-login:hover {
                background-color: #254b5f;
                color: #fff;
            }

        .error-msg {
            color: #ff4d4d;
            font-size: 0.9rem;
            margin-bottom: 10px;
        }

        .brand-logo {
            text-align: center;
            font-size: 2rem;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 20px;
            text-shadow: 1px 1px 5px rgba(0,0,0,0.4);
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="brand-logo">TechnoMate Admin</div>
        <div class="login-card">
            <h2>Sign In</h2>
            <form method="post">
                <div class="mb-3">
                    <input name="Username" class="form-control" placeholder="Username" />
                </div>

                <div class="mb-3">
                    <input name="Password" type="password" class="form-control" placeholder="Password" />
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="error-msg">@ViewBag.Error</div>
                }

                <button type="submit" class="btn btn-login w-100 mt-3">Sign In</button>
            </form>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
