<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>@ViewBag.Title - Technomate</title>

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" />
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&family=Poppins:wght@300;400;500;600;700&family=Raleway:wght@300;400;500;600;700&display=swap" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" />
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" />

    <!-- Main CSS File -->
    <link href="~/assets/css/main.css" rel="stylesheet" />

    <link href="~/css/custom.css" rel="stylesheet" />

</head>

@{
        var setting = SettingRepo.GetSetting();
        var theme = setting?.Theme ?? "CrimsonSky";
}

<body class="index-page theme-@theme">

    <!-- Header -->
    <header id="header" class="header sticky-top">

        <div class="topbar d-flex align-items-center dark-background">
            <div class="container d-flex justify-content-center justify-content-md-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-envelope"><a href="mailto:contact@example.com">hr@technomateit.com</a></i>
                    <i class="bi bi-phone ms-4"><span>+91 9558887181</span></i>
                </div>
                <div class="social-links d-none d-md-flex align-items-center">
                    <a href="#" class="twitter"><i class="bi bi-twitter-x"></i></a>

                    <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>

        <div class="branding">
            <div class="container d-flex align-items-center justify-content-between">
                <a href="@Url.Action("Index", "Home")" class="logo d-flex align-items-center">
                    <img src="~/assets/img/logo.png" alt="Technomate Logo" style="height: 100px; width: auto;" />
                </a>

                <nav id="navmenu" class="navmenu">
    <ul>
        <li><a href="@Url.Action("Index", "Home")" 
            class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" && ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">Home</a></li>
        <li><a href="@Url.Action("Aboutus", "Aboutus")"
            class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Aboutus" ? "active" : "")">About</a></li>
        <li class="nav-item dropdown d-flex align-items-center">
     <a class="nav-link" href="/Service/Services">
         SERVICE
     </a>

     <a class="nav-link dropdown-toggle px-1"
        href="#"
        id="serviceDropdown"
        role="button"
        data-bs-toggle="dropdown"
        aria-expanded="false"
        style="cursor:pointer;">
         <i class="fa-solid fa-angle-down ms-1" style="font-size: 12px;"></i>
     </a>
     <ul class="dropdown-menu mt-2 shadow" aria-labelledby="serviceDropdown">

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/WebDevelopment">
                 <i class="fa-solid fa-code me-2 " style="color:#2f5f7a;"></i> Web Development
             </a>
         </li>

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/LogoIdentity">
                 <i class="fa-solid fa-id-card me-2 " style="color:#2f5f7a;"></i> Logo & Identity
             </a>
         </li>

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/GraphicsDesign">
                 <i class="fa-solid fa-paintbrush me-2 " style="color:#2f5f7a;"></i> Graphics Design
             </a>
         </li>

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/AppDevelopment">
                 <i class="fa-solid fa-mobile-screen-button me-2 " style="color:#2f5f7a;"></i> App Development
             </a>
         </li>

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/SocialMarketing">
                 <i class="fa-solid fa-bullhorn me-2 " style="color:#2f5f7a;"></i> Social Marketing
             </a>
         </li>

         <li>
             <a class="dropdown-item d-flex align-items-center" href="/Service/ContentCreation">
                 <i class="fa-solid fa-pen-nib me-2 " style="color:#2f5f7a;"></i> Content Creation
             </a>
         </li>

     </ul>
 </li>
        <li><a href="@Url.Action("Portfolio", "Portfolio")"
            class="@(ViewContext.RouteData.Values["Action"].ToString() == "Portfolio" ? "active" : "")">Portfolio</a></li>
        
        <li><a href="@Url.Action("Blog", "Blog")"
            class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Blog" ? "active" : "")">Blog</a></li>
        
        <li><a href="@Url.Action("Contact", "Contact")"
            class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Contact" ? "active" : "")">Contact</a></li>

    </ul>
    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
</nav>
            </div>
        </div>

    </header>
    <!-- End Header -->
    <!-- Main Body Section -->
    <main class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer id="footer" class="footer dark-background">

        <div class="footer-newsletter">
            <div class="container text-center">
                <h4>Join Our Newsletter</h4>
                <p>Subscribe to our newsletter and receive the latest news!</p>
                <form action="#" method="post">
                    <div class="newsletter-form">
                        <input type="email" name="email" />
                        <input type="submit" value="Subscribe" />
                    </div>
                </form>
            </div>
        </div>

        <div class="container footer-top">
    <div class="row gy-4">

        @await Component.InvokeAsync("Footer")

        <div class="col-lg-2 col-md-3 footer-links">
            <h4>Useful Links</h4>
            <ul>
                <li><i class="bi bi-chevron-right"></i> <a href="@Url.Action("Index", "Home")">Home</a></li>
                <li><i class="bi bi-chevron-right"></i> <a href="@Url.Action("Aboutus", "Aboutus")">About</a></li>
                <li><i class="bi bi-chevron-right"></i> <a href="@Url.Action("Services", "Service")">Services</a></li>
            </ul>
        </div>

        <div class="col-lg-4 col-md-12">
            <h4>Follow Us</h4>
            <div class="social-links d-flex">
                <a href="#"><i class="bi bi-twitter-x"></i></a>
                <a href="#"><i class="bi bi-facebook"></i></a>
                <a href="#"><i class="bi bi-instagram"></i></a>
                <a href="#"><i class="bi bi-linkedin"></i></a>
            </div>
        </div>

    </div>
</div>

        <div class="container copyright text-center">
            <p>© Copyright <strong>Technomate</strong>. All Rights Reserved</p>
        </div>

    </footer>
+
    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/aos/aos.js"></script>
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js"></script>

    <!-- Main JS File -->
    <script src="~/assets/js/main.js"></script>

</body>
</html>
