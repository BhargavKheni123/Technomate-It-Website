@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - UpConstruction</title>
    <meta name="description" content="" />
    <meta name="keywords" content="" />

    <!-- Favicons -->
    <link href="@Url.Content("~/technomate2/img/favicon.png")" rel="icon" />
    <link href="@Url.Content("~/technomate2/img/apple-touch-icon.png")" rel="apple-touch-icon" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet" />

    <!-- Vendor CSS Files -->
    <link href="@Url.Content("~/technomate2/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/technomate2/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet" />
    <link href="@Url.Content("~/technomate2/vendor/aos/aos.css")" rel="stylesheet" />
    <link href="@Url.Content("~/technomate2/vendor/fontawesome-free/css/all.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/technomate2/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/technomate2/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet" />

    <!-- Main CSS File -->
    <link href="@Url.Content("~/technomate2/css/main.css")" rel="stylesheet" />
</head>
<body class="index-page">

    <!-- Header -->

        <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
            <a href="@Url.Action("Index2", "Home")"
               class="logo d-flex align-items-center"
               style="color:#feb900; font-weight:700;">
                Technomate
            </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                    <li>
                        <a href="@Url.Action("Index2", "Home")"
                           class="@(currentController == "Home" ? "active" : "")">
                            Home
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Aboutus2", "Aboutus")"
                           class="@(currentController == "Aboutus" ? "active" : "")">
                            About
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Portfolio2", "Portfolio")"
                           class="@(currentController == "Portfolio" ? "active" : "")">
                            Portfolio
                        </a>
                    </li>

                    <li>
                        <a href="@Url.Action("Blog2", "Blog")"
                           class="@(currentController == "Blog" ? "active" : "")">
                            Blog
                        </a>
                    </li>
                    <li class="dropdown @(currentController == "Service" ? "active" : "")">
                        <a href="#">
                            <span>Services</span>
                            <i class="bi bi-chevron-down toggle-dropdown"></i>
                        </a>
                        <ul>
                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/WebDevelopment2">
                                    <i class="fa-solid fa-code me-2 " style="color:#feb900;"></i> Web Development
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/LogoIdentity2">
                                    <i class="fa-solid fa-id-card me-2 " style="color:#feb900;"></i> Logo & Identity
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/GraphicsDesign2">
                                    <i class="fa-solid fa-paintbrush me-2 " style="color:#feb900;"></i> Graphics Design
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/AppDevelopment2">
                                    <i class="fa-solid fa-mobile-screen-button me-2 " style="color:#feb900;"></i> App Development
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/SocialMarketing2">
                                    <i class="fa-solid fa-bullhorn me-2 " style="color:#feb900;"></i> Social Marketing
                                </a>
                            </li>

                            <li>
                                <a class="dropdown-item d-flex align-items-center" href="/Service/ContentCreation2">
                                    <i class="fa-solid fa-pen-nib me-2 " style="color:#feb900;"></i> Content Creation
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Contact2", "Contact")"
                           class="@(currentController == "Contact" ? "active" : "")">
                            Contact
                        </a>
                    </li>
                </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

            </div>
        </header>

    <!-- End Header -->

    <!-- Main content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <footer id="footer" class="footer dark-background">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6 footer-about">

                    @await Component.InvokeAsync("Footer")
                    
                    <div class="social-links d-flex mt-4">
                        <a href=""><i class="bi bi-twitter-x"></i></a>
                        <a href=""><i class="bi bi-facebook"></i></a>
                        <a href=""><i class="bi bi-instagram"></i></a>
                        <a href=""><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li><a href="@Url.Action("About", "Home")">About us</a></li>
                        <li><a href="@Url.Action("Services2", "Service")">Services</a></li>
                        <li><a href="#">Terms of service</a></li>
                        <li><a href="#">Privacy policy</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li>
                            <a asp-controller="Service" asp-action="AppDevelopment2">Web Design</a>
                        </li>
                        <li>
                            <a asp-controller="Service" asp-action="WebDevelopment2">Web Development</a>
                        </li>
                        <li>
                            <a asp-controller="Service" asp-action="ContentCreation2">Product Management</a>
                        </li>
                        <li>
                            <a asp-controller="Service" asp-action="SocialMarketing2">Marketing</a>
                        </li>
                        <li>
                            <a asp-controller="Service" asp-action="GraphicsDesign2">Graphic Design</a>
                        </li>
                    </ul>

                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Company</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Our Services</a></li>
                        <li><a href="#">Projects</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-3 footer-links">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Customer Support</a></li>
                    </ul>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">UpConstruction</strong> <span>All Rights Reserved</span></p>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="@Url.Content("~/technomate2/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/php-email-form/validate.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/aos/aos.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/glightbox/js/glightbox.min.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/imagesloaded/imagesloaded.pkgd.min.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/isotope-layout/isotope.pkgd.min.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/swiper/swiper-bundle.min.js")"></script>
    <script src="@Url.Content("~/technomate2/vendor/purecounter/purecounter_vanilla.js")"></script>

    <!-- Main JS File -->
    <script src="@Url.Content("~/technomate2/js/main.js")"></script>

    @RenderSection("Scripts", required: false)

</body>

</html>
