@{
    ViewData["Title"] = "Logo & Identity";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .brand-img-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 18px rgba(0,0,0,0.1);
    }
</style>

<!-- ====================== TOP MAIN SECTION ====================== -->

<div class="container mt-5">
    <div class="row align-items-center">

        <!-- LEFT IMAGE -->
        <div class="col-md-6">
            <div class="brand-img-card p-3 bg-white">
                <img src="/img/logo.png" class="img-fluid" />
            </div>
        </div>

        <!-- RIGHT TEXT -->
        <div class="col-md-6 ps-md-5 mt-4 mt-md-0">

            <h1 class="text-primary fw-bold">Build a Memorable Brand Identity</h1>

            <p class="mt-3">
                Your logo and brand identity are the face of your business. At Technomate IT Analysts,
                we craft unique, professional logos and cohesive branding solutions that make a lasting
                impression and set you apart from the competition.
            </p>

            <ul class="list-unstyled">
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Custom logo design tailored to your vision</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Brand guidelines and visual identity systems</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Business cards, letterheads, and stationery</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Rebranding and brand refresh services</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Consistent branding across all digital platforms</li>
            </ul>

            <a href="/Contact/Index" class="btn btn-info text-white px-4 py-2 mt-2 fw-bold" style="color:#2f5f7a;">
                Start Your Branding Project
            </a>
        </div>

    </div>
</div>


<!-- ====================== WHY CHOOSE SECTION ====================== -->

<div class="container text-center mt-5">

    <h2 class="fw-bold mb-4">Why Choose Technomate?</h2>

    <div class="row justify-content-center">

        <div class="col-md-3 mb-4">
            <i class="fa-solid fa-lightbulb fa-3x mb-3" style="color:#2f5f7a;"></i>
            <h4 class="fw-bold">Creative Designers</h4>
            <p>
                Our team blends creativity and strategy to deliver logos that truly represent your brand.
            </p>
        </div>

        <div class="col-md-3 mb-4">
            <i class="fa-solid fa-palette fa-3x mb-3" style="color:#2f5f7a;"></i>
            <h4 class="fw-bold">Consistent Branding</h4>
            <p>
                We ensure your brand identity is consistent across all touchpoints and platforms.
            </p>
        </div>

        <div class="col-md-3 mb-4">
            <i class="fa-solid fa-bullseye fa-3x  mb-3" style="color:#2f5f7a;"></i>
            <h4 class="fw-bold">Client-Centric Approach</h4>
            <p>
                We listen to your story and vision, creating designs that align with your business goals.
            </p>
        </div>

        <div class="col-md-3 mb-4">
            <i class="fa-solid fa-award fa-3x  mb-3" style="color:#2f5f7a;"></i>
            <h4 class="fw-bold">Proven Results</h4>
            <p>
                Our branding solutions help businesses build trust and recognition in their markets.
            </p>
        </div>

    </div>
</div>
