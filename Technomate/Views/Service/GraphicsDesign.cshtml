@{
    ViewData["Title"] = "Graphics Design";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .gd-img-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 18px rgba(0,0,0,0.08);
    }

    .showcase-img {
        height: 220px;
        width: 100%;
        object-fit: cover;
        border-radius: 10px;
    }
</style>

<div class="container mt-5">
    <div class="row align-items-center">

        <div class="col-md-6">

            <h2 class="fw-bold text-primary">Creative Graphics Design Solutions</h2>

            <p class="mt-2">
                Our graphics design services bring your brand to life with visually compelling and impactful designs.
                From marketing materials to digital assets, we ensure every piece reflects your brand’s personality
                and engages your audience.
            </p>

            <ul class="list-unstyled mt-3">
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Custom graphics for web and print</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Infographics, banners, and promotional materials</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Social media graphics and ad creatives</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Brand illustrations and iconography</li>
                <li><i class="fa-solid fa-check text-info me-2"></i> Consistent visual style across all platforms</li>
            </ul>

            <a href="/Contact/Index" class="btn btn-info text-white fw-bold px-4 mt-3" style="color:#2f5f7a;">
                Get Creative Designs
            </a>

        </div>

        <div class="col-md-6 mt-4 mt-md-0">
            <div class="gd-img-card">
                <img src="/img/graphics/graphic.jpg" class="img-fluid" />
            </div>
        </div>

    </div>
</div>

<div class="container text-center mt-5">

    <h3 class="fw-bold">Our Design Showcase</h3>
    <p class="text-secondary">A glimpse of our creative work for clients across industries.</p>

    <div class="row mt-4">

        <div class="col-md-4 col-12 mb-4">
            <img src="/img/graphics/graphic1.jpg" class="showcase-img" />
        </div>

        <div class="col-md-4 col-12 mb-4">
            <img src="/img/graphics/graphic2.jpg" class="showcase-img" />
        </div>

        <div class="col-md-4 col-12 mb-4">
            <img src="/img/graphics/graphic3.jpg" class="showcase-img" />
        </div>

    </div>

</div>

<div class="container text-center mt-5">

    <h3 class="fw-bold">Why Choose Technomate?</h3>

    <div class="row mt-4">

        <div class="col-md-3 col-6 mb-4">
            <i class="fa-solid fa-lightbulb fa-3x  mb-3" style="color:#2f5f7a;"></i>
            <h5 class="fw-bold">Creative Expertise</h5>
            <p class="small">
                Our designers blend creativity and strategy to deliver stunning visuals that captivate attention.
            </p>
        </div>

        <div class="col-md-3 col-6 mb-4">
            <i class="fa-solid fa-layer-group fa-3x mb-3" style="color:#2f5f7a;"></i>
            <h5 class="fw-bold">Versatile Solutions</h5>
            <p class="small">
                We design for all kinds of web, print, social media, and more — ensuring brand consistency everywhere.
            </p>
        </div>

        <div class="col-md-3 col-6 mb-4">
            <i class="fa-solid fa-bolt fa-3x mb-3" style="color:#2f5f7a;"></i>
            <h5 class="fw-bold">Fast Turnaround</h5>
            <p class="small">
                We deliver high-quality graphics quickly, so you can launch campaigns and projects on time.
            </p>
        </div>

        <div class="col-md-3 col-6 mb-4">
            <i class="fa-solid fa-face-smile fa-3x  mb-3" style="color:#2f5f7a;"></i>
            <h5 class="fw-bold">Client Satisfaction</h5>
            <p class="small">
                We work closely with you to ensure every design meets your expectations and business goals.
            </p>
        </div>

    </div>
</div>
