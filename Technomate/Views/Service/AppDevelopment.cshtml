@{
    ViewData["Title"] = "App Development";
}

<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    .app-img-card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 18px rgba(0,0,0,0.08);
    }

    .feature-img {
        height: 220px;
        width: 100%;
        object-fit: cover;
        border-radius: 10px;
    }
</style>

<!-- ======================== TOP APP DEVELOPMENT SECTION ======================== -->

<div class="container mt-5">
    <div class="row align-items-center">

        <div class="col-md-6">
            <div class="service-img-card">
                <img src="/img/appdevlopment/app2.jpeg"
                     class="img-fluid"
                     style="width:100%; max-width:500px; height:auto;" />
            </div>
        </div>

        <!-- TEXT LEFT -->
        <div class="col-md-6 ps-md-5 mt-4 mt-md-0">


            <h2 class="fw-bold text-primary">Custom App Development Services</h2>

            <p class="mt-2">
                We build high-performance mobile and web applications tailored to your business needs.
                Our developers use modern, secure and scalable technologies to create apps for iOS,
                Android and cross-platform environments.
            </p>

            <ul class="list-unstyled mt-3">
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Native iOS & Android app development</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Cross-platform apps (Flutter, React Native)</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Progressive Web Apps (PWAs)</li>
                <li class="mb-2"><i class="fa-solid fa-check text-info me-2"></i> Mobile UI/UX design & prototyping</li>
                <li><i class="fa-solid fa-check text-info me-2"></i> App maintenance & long-term support</li>
            </ul>

            <a href="/Contact/Contact" class="btn btn-info text-white fw-bold px-4 mt-3" style="color:#2f5f7a;">
                Start Your App Project
            </a>

        </div>


    </div>
</div>

