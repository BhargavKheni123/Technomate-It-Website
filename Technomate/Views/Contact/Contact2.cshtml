@model Technomate.Models.ContactMessage
@{
    Layout = "_Layout2";
}

<body class="contact-page">

    <main class="main">

        <!-- Page Title -->
        <div class="page-title dark-background" style="background-image: url(assets/img/page-title-bg.jpg);">
            <div class="container position-relative">
                <h1>Contact</h1>
                <nav class="breadcrumbs">
                    <ol>
                        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                        <li class="current">Contact</li>
                    </ol>
                </nav>
            </div>
        </div>

        <!-- Contact Section -->
        <section id="contact" class="contact section">

            <div class="container" data-aos="fade-up" data-aos-delay="100">

                <div class="row gy-4">
                    <div class="col-lg-6">
                        <div class="info-item d-flex flex-column justify-content-center align-items-center">
                            <i class="bi bi-geo-alt"></i>
                            <h3>Address</h3>
                            <p>@ViewBag.Setting.Address</p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="info-item d-flex flex-column justify-content-center align-items-center">
                            <i class="bi bi-telephone"></i>
                            <h3>Call Us</h3>
                            <p>@ViewBag.Setting.Phone</p>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6">
                        <div class="info-item d-flex flex-column justify-content-center align-items-center">
                            <i class="bi bi-envelope"></i>
                            <h3>Email Us</h3>
                            <p>@ViewBag.Setting.Email</p>
                        </div>
                    </div>
                </div>

                <div class="row gy-4 mt-1">
                    <div class="col-lg-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.3926142268897!2d72.6631494!3d23.046063399999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e87a653d9bf4f%3A0xbf0503f5317a5626!2sHill%20Town%20Landmark!5e0!3m2!1sen!2sin!4v1765193745403!5m2!1sen!2sin" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>

                    <div class="col-lg-6">
                        <!-- AJAX messages -->
                        <div id="contact-messages"></div>

                        <form id="contactForm" asp-action="SaveContact" asp-controller="Contact" method="post" class="php-email-form">
                            @Html.AntiForgeryToken()
                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <input asp-for="Name" class="form-control" placeholder="Your Name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <input asp-for="Email" class="form-control" placeholder="Your Email" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <textarea asp-for="Message" class="form-control" rows="6" placeholder="Message"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>
                                <div class="col-md-12 text-center">
                                    <button type="submit" class="btn btn-primary">Send Message</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

            </div>

        </section>
    </main>
</body>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(function () {
            $("#contactForm").submit(function (e) {
                e.preventDefault();
                var form = $(this);
                $.ajax({
                    type: "POST",
                    url: form.attr("action"),
                    data: form.serialize(),
                    success: function () {
                        $("#contact-messages").html('<div class="alert alert-success">Your message has been sent!</div>');
                        form[0].reset();
                    },
                    error: function () {
                        $("#contact-messages").html('<div class="alert alert-danger">Something went wrong. Please try again.</div>');
                    }
                });
            });
        });
    </script>
}
