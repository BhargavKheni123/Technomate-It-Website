@model Technomate.Models.Testimonial

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create Testimonial";
}

<style>
    body {
        background-color: #f4f6f8;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        border: none;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .card-header {
        background-color: #2f5f7a;
        color: #fff;
        font-weight: 600;
        font-size: 1.3rem;
    }

    .form-label {
        font-weight: 500;
        color: #2f5f7a;
    }

    .form-control {
        border-radius: 10px;
        padding: 10px 15px;
        border: 1px solid #ccc;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #2f5f7a;
            box-shadow: 0 0 5px rgba(47, 95, 122, 0.5);
            outline: none;
        }

    button.btn-primary {
        background-color: #2f5f7a;
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-size: 1.1rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        button.btn-primary:hover {
            background-color: #1e3d55;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

    .container {
        margin-top: 60px;
        margin-bottom: 60px;
    }

    .mb-3 {
        margin-bottom: 25px;
    }
</style>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">

                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-comment-dots"></i>
                        Create Testimonial
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">
                                <i class="fas fa-check-circle"></i>
                                @TempData["Success"]
                            </div>
                        }

                        @if (Context.Session.GetString("Role") == "SuperAdmin")
                        {
                            <div class="mb-3">
                                <label class="form-label">Select Company</label>
                                <select asp-for="CompanyId" class="form-control">
                                    <option value="">--Select Company--</option>
                                    @foreach (var c in ViewBag.Companies as List<CompanyMaster>)
                                    {
                                        <option value="@c.CompanyId">@c.CompanyName</option>
                                    }
                                </select>
                            </div>
                        }
                        else
                        {
                            <input type="hidden" asp-for="CompanyId" value="@Context.Session.GetString("CompanyId")" />
                        }

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter client name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <input asp-for="Role" class="form-control" placeholder="e.g. CEO, Manager" />
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message"
                                      class="form-control"
                                      rows="4"
                                      placeholder="Write testimonial message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-save"></i> Save Testimonial
                        </button>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>